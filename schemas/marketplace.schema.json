{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://claude.ai/schemas/marketplace.json",
  "title": "Claude Plugin Marketplace",
  "description": "Schema for Claude Code plugin marketplace configuration",
  "type": "object",
  "required": ["name", "owner", "plugins"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Marketplace identifier (kebab-case, no spaces)",
      "pattern": "^[a-z0-9-]+$"
    },
    "owner": {
      "type": "object",
      "description": "Maintainer contact and attribution information",
      "required": ["name", "email"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Owner's full name"
        },
        "email": {
          "type": "string",
          "description": "Owner's email address",
          "format": "email"
        }
      },
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "description": "Optional marketplace metadata",
      "properties": {
        "description": {
          "type": "string",
          "description": "Brief marketplace description"
        },
        "version": {
          "type": "string",
          "description": "Release version tracking"
        },
        "pluginRoot": {
          "type": "string",
          "description": "Base path for relative plugin sources"
        }
      },
      "additionalProperties": false
    },
    "plugins": {
      "type": "array",
      "description": "Collection of available plugin definitions",
      "items": {
        "type": "object",
        "required": ["name", "source"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Plugin identifier (kebab-case, no spaces)",
            "pattern": "^[a-z0-9-]+$"
          },
          "source": {
            "description": "Location specification for plugin retrieval",
            "oneOf": [
              {
                "type": "string",
                "description": "Relative path to local plugin",
                "pattern": "^\\.\\/.*$"
              },
              {
                "type": "object",
                "description": "Remote plugin source configuration",
                "required": ["source"],
                "properties": {
                  "source": {
                    "type": "string",
                    "enum": ["github", "url"],
                    "description": "Source type"
                  },
                  "repo": {
                    "type": "string",
                    "description": "GitHub repository in owner/repo format",
                    "pattern": "^[^/]+/[^/]+$"
                  },
                  "url": {
                    "type": "string",
                    "description": "Git URL for alternative hosting",
                    "format": "uri"
                  }
                }
              }
            ]
          },
          "description": {
            "type": "string",
            "description": "Brief explanation of plugin's purpose"
          },
          "version": {
            "type": "string",
            "description": "Plugin version",
            "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
          },
          "author": {
            "type": ["string", "object"],
            "description": "Author information",
            "properties": {
              "name": {
                "type": "string"
              },
              "email": {
                "type": "string",
                "format": "email"
              },
              "url": {
                "type": "string",
                "format": "uri"
              }
            }
          },
          "homepage": {
            "type": "string",
            "description": "Documentation URL",
            "format": "uri"
          },
          "repository": {
            "type": "string",
            "description": "Source code repository URL",
            "format": "uri"
          },
          "license": {
            "type": "string",
            "description": "License identifier (SPDX format)"
          },
          "keywords": {
            "type": "array",
            "description": "Discovery tags",
            "items": {
              "type": "string"
            }
          },
          "category": {
            "type": "string",
            "description": "Plugin category"
          },
          "tags": {
            "type": "array",
            "description": "Additional classification tags",
            "items": {
              "type": "string"
            }
          },
          "commands": {
            "type": ["string", "array"],
            "description": "Custom paths to command files or directories"
          },
          "agents": {
            "type": ["string", "array"],
            "description": "Custom paths to agent files"
          },
          "hooks": {
            "type": ["string", "object"],
            "description": "Custom hooks setup or file reference"
          },
          "mcpServers": {
            "type": ["string", "object"],
            "description": "MCP server configurations or path to MCP config"
          },
          "strict": {
            "type": "boolean",
            "description": "Controls whether plugin.json validation is enforced",
            "default": true
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
